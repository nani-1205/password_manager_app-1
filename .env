# .env file

# Replace with MongoDB server IP address or hostname
MONGO_HOST=0.0.0.0 # Or your server's IP like 192.168.1.100

# Replace with MongoDB port (default is 27017)
MONGO_PORT=27017

# Replace with your MongoDB username (if authentication is enabled)
MONGO_USER=admin

# Replace with your MongoDB password (if authentication is enabled)
MONGO_PASSWORD=password123  # Use a strong password

# Specify the database where the user is defined (often 'admin' or the specific DB)
# Required if using authentication. Leave blank or omit if auth is disabled.
MONGO_AUTH_DB=admin

# Optional: You can keep these here or default in config.py
# DB_NAME=password_vault
# USERS_COLLECTION=users
# VAULT_COLLECTION=vault

# --- Flask Requirement ---
# Add a strong, unique secret key for Flask sessions
SECRET_KEY=Abc@12345!()